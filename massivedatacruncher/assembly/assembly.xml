<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>jdk17</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<unpack>false</unpack>
			<excludes>
				<exclude>ch.qos.logback:logback-classic</exclude>
				<exclude>ch.qos.logback:logback-core</exclude>
				<exclude>asm:asm</exclude>
				<exclude>org.apache.logging.log4j:log4j-core</exclude>
				<exclude>org.apache.logging.log4j:log4j-api</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>false</useAllReactorProjects>
			<includes>
				<include>com.github.mdc:taskexecutor:jar:*</include>
				<include>com.github.mdc:taskscheduler:jar:*</include>
				<include>com.github.mdc:common:jar:*</include>
				<include>com.github.mdc:pipeline:jar:*</include>
				<include>com.github.mdc:examples:jar:*</include>
			</includes>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>modules</outputDirectory>
				<unpack>false</unpack>
				<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
				<dependencySets>
					<dependencySet>
						<outputDirectory>modules</outputDirectory>
						<useProjectArtifact>true</useProjectArtifact>
						<unpack>false</unpack>
						<scope>test</scope>
						<includes>
							<include>*:test-jar:*</include>
						</includes>
						<excludes>
							<exclude>*:hadoop*:test-jar:*</exclude>
							<exclude>*:zookeeper:*</exclude>
						</excludes>
						<useProjectAttachments>true</useProjectAttachments>
						<outputFileNameMapping>${artifact.artifactId}-tests.${artifact.extension}</outputFileNameMapping>
					</dependencySet>

				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
	<fileSets>
		<fileSet>
			<directory>scripts</directory>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
		</fileSet>
		<fileSet>
			<directory>dockermdccontainer</directory>
			<outputDirectory>devops/docker/dockermdccontainer</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
			<includes>
				<include>Dockerfile</include>
				<include>mdctes.properties</include>
				<include>container.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>dockermdcts</directory>
			<outputDirectory>devops/docker/dockermdcts</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
			<includes>
				<include>Dockerfile</include>
				<include>mdcts.properties</include>
				<include>taskscheduler.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>dockermdctss</directory>
			<outputDirectory>devops/docker/dockermdctss</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
			<includes>
				<include>Dockerfile</include>
				<include>mdctss.properties</include>
				<include>taskschedulerstream.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>dockeryarntss</directory>
			<outputDirectory>devops/docker/dockeryarntss</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
		</fileSet>
		<fileSet>
			<directory>dockerzk</directory>
			<outputDirectory>devops/docker/dockerzk</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
		</fileSet>
		<fileSet>
			<directory>kubermultipod</directory>
			<outputDirectory>devops/kubernetes/kubermultipod</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
		</fileSet>
		<fileSet>
			<directory>kubernetesmesos</directory>
			<outputDirectory>devops/kubernetes/kubernetesmesos</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
		</fileSet>
		<fileSet>
			<directory>kubersinglepod</directory>
			<outputDirectory>devops/kubernetes/kubersinglepod</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
		</fileSet>
		<fileSet>
			<directory>openshift</directory>
			<outputDirectory>devops/openshift/openshift</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
		</fileSet>
		<fileSet>
			<directory>config</directory>
			<outputDirectory>config</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>docs</directory>
			<outputDirectory>docs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>yarn</directory>
			<outputDirectory>yarn</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>jshell</directory>
			<outputDirectory>javashellexamples</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>keystore</directory>
			<outputDirectory>keystore</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>lib</directory>
			<outputDirectory>lib</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
		</fileSet>
		<fileSet>
			<directory>web</directory>
			<outputDirectory>web</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
		</fileSet>
		<fileSet>
			<directory>./</directory>
			<outputDirectory>./</outputDirectory>
			<includes>
				<include>README.md</include>
			</includes>
			<fileMode>0755</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
		<fileSet>
			<directory>${basedir}/pipeline/target</directory>
			<outputDirectory>mesos</outputDirectory>
			<includes>
				<include>%regex[pipeline-.*-shaded.jar]</include>
			</includes>
			<fileMode>0755</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
	</fileSets>
</assembly>