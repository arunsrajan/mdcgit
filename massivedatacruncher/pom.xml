                                                                                 dest="target/unpack/usr/local/java"/>
                                <copy todir="target/mdcstandalone">
                                    <fileset dir="dockermdcstandalone" includes="entry.sh"/>
                                    <fileset dir="dockermdcstandalone"
                                                                                          includes="standalone.sh"/>
                                </copy>
                                <copy todir="target/mdccontainer">
                                    <fileset dir="dockermdccontainer" includes="entry.sh"/>
                                    <fileset dir="dockermdccontainer"
                                                                                          includes="container.sh"/>
                                </copy>
