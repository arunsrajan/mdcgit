                    <execution>
                        <id>prepare</id>
                        <phase>validate</phase>
                        <configuration>
                            <target name="copy files to web project">
                                <echo message="prepare phase"/>
                                <unzip src="target/MassiveDataCruncher-${project.version}-jdk17.zip"
                                                                                 dest="target/unpack/opt/mdc"/>
                                <mkdir dir="target/unpack/usr/local/java"/>
